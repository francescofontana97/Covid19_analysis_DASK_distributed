    "metadata": {
        "title": "European Geriatric Medicine Orthogeriatrics: much more action is needed",
        "authors": [
            {
                "first": "Anette",
                "middle": [
                    "Hylen"
                ],
                "last": "Ranhoff",
                "suffix": "",
