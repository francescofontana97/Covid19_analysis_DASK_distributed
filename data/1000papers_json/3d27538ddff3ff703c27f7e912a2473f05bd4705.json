    "metadata": {
        "title": "Diffusion of DNA-Binding Species in the Nucleus: A Transient Anomalous Subdiffusion Model",
        "authors": [
            {
                "first": "M",
                "middle": [
                    "J"
                ],
                "last": "Saxton",
                "suffix": "",
